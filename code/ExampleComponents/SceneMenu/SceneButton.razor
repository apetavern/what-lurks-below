@using Sandbox;
@using Sandbox.UI;
@inherits Panel

<root onclick="@( () => OnSelected( Scene ) )">

    <div class="title">@(Scene.Title ?? Scene.ResourceName)</div>
    <div class="description">@Scene.Description</div>

</root>

@code
{

    public SceneFile Scene { get; set; }

    public Action<SceneFile> OnSelected { get; set; }

    protected override int BuildHash() => System.HashCode.Combine(Scene);
}
